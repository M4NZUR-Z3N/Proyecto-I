<!DOCTYPE html><!-- juan jose, copiar y pegar todo el cod -->
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Denuncias</title>
    <link rel="stylesheet" href="css/denuncias_usuarios.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="icon" href="img/LogoMuniPequeño.ico">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script>
        $(function(){
            $("#header").load("general/header.html");
            $("#footer").load("general/footer.html");
        });
    </script>
</head>
<body>

    <div id="header"></div>

    <main>
        <section class="form_user">
            
                <h2 class="title_2">Ingrese su Denuncia</h2>
        
                <form action="/denuncia" method="POST" enctype="multipart/form-data">
        
                    <div class="date_den">
                        <label for="date">Fecha:</label>
                        <input type="date" name="date" id="date">
                    </div>
        
                    <div class="desc_den">
                        <label for="desc">Descripción:</label>
                        <textarea name="descripcion" id="desc" cols="30" rows="5"></textarea>
                    </div>

                    <div class="adjuntar_enviar">
                        <div class="file_crear">
                            <label for="file">Adjuntar Archivo:</label>
                            <input type="file" name="file" id="file">
                        </div>
            
                        <div class="button_container">
                            <button class="button_den" type="submit">Enviar</button>
                        </div>
                    </div>
                    
        
                </form>
            
        </section>

        <section class="sec_denun">
            <h2 class="title_h2">Denuncias</h2>
            <div class="denuncias">
                <% denuncias.forEach(denuncia => { %>
                    <div class="denun">
                        <div class="bloque_titulo-fecha">
                            <strong>Descripción:</strong>
                            <p class="date">Fecha: <%= denuncia.fecha.toISOString().split('T')[0] %></p>
                        </div>
                        <div class="bloque_descripcion-imagen">
                            <p class="desc"> <%= denuncia.descripcion %></p>
                            <% if (denuncia.archivo && denuncia.archivo.filename) { %>
                                <div class="file_con">
                                    <img src="/uploads/<%= denuncia.archivo.filename %>" alt="Imagen Subida" style="width: 100%; height: 100%;">
                                </div>
                            <% } %>
                        </div>

                    </div>
                <% }); %>
            </div>
        </section>

        <a class="modo__dev" href="/denuncias_dev">Modo Administrador</a>

    </main>

    <div id="footer"></div>
    
    

</body>
</html>